@model LibraryManagement.Web.Models.Loan
@{
    ViewData["Title"] = "Return Loan";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0 text-success"><i class="fa-solid fa-rotate-left"></i> Return Loan</h1>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left me-2"></i>Cancel</a>
</div>

<div class="alert alert-success border-0 shadow-sm rounded-4">
    <h5 class="alert-heading">Confirm Return</h5>
    <p>Mark the loan of <strong>@Model.Book?.Title</strong> borrowed by <strong>@Model.ApplicationUser?.FullName</strong> as returned?</p>
</div>

<div class="border rounded-4 p-4 mb-4">
    <dl class="row mb-0">
        <dt class="col-sm-3">Borrowed</dt>
        <dd class="col-sm-9">@Model.BorrowedAt.ToShortDateString()</dd>
        <dt class="col-sm-3">Due</dt>
        <dd class="col-sm-9">@Model.DueAt.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="Return">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-success btn-lg"><i class="fa-solid fa-rotate-left me-2"></i>Confirm Return</button>
</form>

