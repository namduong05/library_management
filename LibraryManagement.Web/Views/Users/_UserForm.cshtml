@model LibraryManagement.Web.Models.ApplicationUser
@{
    var roleOptions = ViewBag.RoleOptions as List<SelectListItem> ?? new();
}
<div class="row g-3">
    <div class="col-md-6">
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-control form-control-lg" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control form-control-lg" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" asp-items="roleOptions" class="form-select"></select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Address" class="form-label"></label>
        <textarea asp-for="Address" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="RegisteredAt" class="form-label"></label>
        <input asp-for="RegisteredAt" class="form-control" type="date" />
        <span asp-validation-for="RegisteredAt" class="text-danger"></span>
    </div>
</div>

