@{
    ViewData["Title"] = "Dashboard";
    var recentLoans = ViewBag.RecentLoans as IEnumerable<LibraryManagement.Web.Models.Loan> ?? Enumerable.Empty<LibraryManagement.Web.Models.Loan>();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0"><i class="fa-solid fa-chart-line"></i> Library Overview</h1>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-3">
        <div class="dashboard-stat bg-primary text-white p-4 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="mb-1 text-uppercase small">Total Books</p>
                    <h2 class="fw-bold">@ViewBag.BookCount</h2>
                </div>
                <i class="fa-solid fa-book fa-2x opacity-75"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-stat bg-success text-white p-4 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="mb-1 text-uppercase small">Readers</p>
                    <h2 class="fw-bold">@ViewBag.ReaderCount</h2>
                </div>
                <i class="fa-solid fa-user-graduate fa-2x opacity-75"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-stat bg-warning text-white p-4 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="mb-1 text-uppercase small">Librarians</p>
                    <h2 class="fw-bold">@ViewBag.LibrarianCount</h2>
                </div>
                <i class="fa-solid fa-user-tie fa-2x opacity-75"></i>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="dashboard-stat bg-danger text-white p-4 shadow-sm">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="mb-1 text-uppercase small">Active Loans</p>
                    <h2 class="fw-bold">@ViewBag.ActiveLoanCount</h2>
                </div>
                <i class="fa-solid fa-handshake fa-2x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="border rounded-4 p-4 h-100">
            <h2 class="h5 mb-4"><i class="fa-solid fa-arrow-trend-up text-primary me-2"></i>Recent Loans</h2>
            @if (!recentLoans.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="fa-regular fa-face-smile-beam fa-2x mb-3"></i>
                    <p>No loans have been created yet.</p>
                    <a asp-controller="Loans" asp-action="Create" class="btn btn-outline-primary btn-sm">Create Loan</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>Book</th>
                                <th>Reader</th>
                                <th>Borrowed</th>
                                <th>Due</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var loan in recentLoans)
                            {
                                var badgeClass = loan.Status switch
                                {
                                    LoanStatus.Borrowed => "bg-primary",
                                    LoanStatus.Returned => "bg-success",
                                    LoanStatus.Overdue => "bg-danger",
                                    _ => "bg-secondary"
                                };
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            @if (!string.IsNullOrWhiteSpace(loan.Book?.CoverUrl))
                                            {
                                                <img src="@loan.Book!.CoverUrl" alt="@loan.Book!.Title" class="rounded" style="width:50px;height:70px;object-fit:cover;" />
                                            }
                                            <div>
                                                <div class="fw-semibold">@loan.Book?.Title</div>
                                                <small class="text-muted">@loan.Book?.Author</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center gap-3">
                                            <div class="avatar-circle" style="background-color:#0d6efd33;color:#0d6efd;">
                                                @(loan.ApplicationUser?.FullName?.FirstOrDefault() ?? '?')
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@loan.ApplicationUser?.FullName</div>
                                                <small class="text-muted">@loan.ApplicationUser?.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@loan.BorrowedAt.ToShortDateString()</td>
                                    <td>@loan.DueAt.ToShortDateString()</td>
                                    <td><span class="badge badge-status @badgeClass">@loan.Status</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
    <div class="col-lg-5">
        <div class="border rounded-4 p-4 h-100">
            <h2 class="h5 mb-4"><i class="fa-solid fa-lightbulb text-primary me-2"></i>Quick Actions</h2>
            <div class="d-grid gap-3">
                <a asp-controller="Books" asp-action="Create" class="btn btn-outline-primary btn-lg">
                    <i class="fa-solid fa-plus me-2"></i> Add New Book
                </a>
                <a asp-controller="Users" asp-action="Create" class="btn btn-outline-success btn-lg">
                    <i class="fa-solid fa-user-plus me-2"></i> Register Reader
                </a>
                <a asp-controller="Loans" asp-action="Create" class="btn btn-outline-danger btn-lg">
                    <i class="fa-solid fa-hand-holding me-2"></i> Borrow Book
                </a>
            </div>
        </div>
    </div>
</div>

