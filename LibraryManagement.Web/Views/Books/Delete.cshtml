@model LibraryManagement.Web.Models.Book
@{
    ViewData["Title"] = "Delete Book";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0 text-danger"><i class="fa-solid fa-triangle-exclamation"></i> Delete Book</h1>
    <a asp-action="Index" class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left me-2"></i>Cancel</a>
</div>

<div class="alert alert-warning border-0 shadow-sm rounded-4">
    <h5 class="alert-heading">Are you sure?</h5>
    <p>Deleting <strong>@Model.Title</strong> will remove it permanently from the catalog.</p>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.CoverUrl))
        {
            <img src="@Model.CoverUrl" class="img-fluid rounded" alt="@Model.Title" />
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Author</dt>
            <dd class="col-sm-9">@Model.Author</dd>
            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Model.Category</dd>
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.Isbn</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger btn-lg"><i class="fa-solid fa-trash me-2"></i>Delete</button>
</form>

