@model IEnumerable<LibraryManagement.Web.Models.Book>
@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="section-title mb-0"><i class="fa-solid fa-book"></i> Books</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus me-2"></i>New Book</a>
</div>

<form class="row g-2 mb-4" method="get">
    <div class="col-md-10">
        <input type="search" name="search" value="@ViewBag.Search" class="form-control form-control-lg" placeholder="Search by title or author" />
    </div>
    <div class="col-md-2 d-grid">
        <button class="btn btn-outline-primary btn-lg" type="submit"><i class="fa-solid fa-magnifying-glass me-2"></i>Search</button>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead>
            <tr>
                <th>Cover</th>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>ISBN</th>
                <th class="text-center">Available</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.CoverUrl))
                        {
                            <img src="@item.CoverUrl" alt="@item.Title" class="rounded" style="width:55px;height:75px;object-fit:cover;" />
                        }
                        else
                        {
                            <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded" style="width:55px;height:75px;">
                                <i class="fa-solid fa-image"></i>
                            </div>
                        }
                    </td>
                    <td class="fw-semibold">@item.Title</td>
                    <td>@item.Author</td>
                    <td>@item.Category</td>
                    <td>@item.Isbn</td>
                    <td class="text-center">
                        <span class="badge bg-@(item.AvailableCopies > 0 ? "success" : "secondary")">@item.AvailableCopies / @item.TotalCopies</span>
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm"><i class="fa-solid fa-eye"></i></a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm"><i class="fa-solid fa-pen"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

